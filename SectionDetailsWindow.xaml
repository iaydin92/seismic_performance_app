<Window x:Class="AESPerformansApp.SectionDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AESPerformansApp"
        mc:Ignorable="d"
        Title="Section Details" Height="650" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- SECTION LABEL -->
        <TextBlock x:Name="SectionLabel"
                   FontWeight="Bold"
                   FontSize="14"
                   Margin="0,0,0,10"/>

        <!-- CATEGORY SELECTION -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Category:" FontWeight="Bold"/>
            <ComboBox x:Name="CategoryComboBox"
                      SelectedIndex="0"
                      SelectionChanged="CategoryComboBox_SelectionChanged"
                      Margin="0,5,0,0"/>
        </StackPanel>

        <!-- VARIANT NAME INPUT -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Varyant Adı:" FontWeight="Bold"/>
            <TextBox x:Name="VariantNameTextBox"
                     Margin="0,5,0,0"
                     Height="25"/>
        </StackPanel>

        <!-- DYNAMIC INPUTS -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="DynamicInputsPanel">
                <!-- Inputs will be added here dynamically -->
            </StackPanel>
        </ScrollViewer>

        <!-- VARIANTS LIST -->
        <GroupBox Grid.Row="4" Header="Tanımlı Varyantlar" Margin="0,10,0,10">
            <DataGrid x:Name="VariantsDataGrid"
                      Height="120"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Varyant Adı" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Kategori" Binding="{Binding Category}" Width="100"/>
                    <DataGridTemplateColumn Header="İşlemler" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Düzenle" Width="50" Height="20" Margin="2"
                                            Click="EditVariant_Click" Tag="{Binding}"/>
                                    <Button Content="Sil" Width="30" Height="20" Margin="2"
                                            Click="DeleteVariant_Click" Tag="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- OK / CANCEL -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Grid.Row="5"
                    Margin="0,10,0,0">
            <Button Content="Varyant Ekle/Güncelle" Width="130" Margin="0,0,10,0"
                    Click="Ok_Click"/>

            <!-- YENİ BUTON -->
            <Button Content="Hesapla ve Yaz" Width="100" Margin="0,0,10,0"
                    Click="HesaplaVeYaz_Click"/>
            
            <Button Content="Kapat" Width="70"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
